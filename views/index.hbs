<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- VENDOR STYLESHEETS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <!-- CUSTOM STYLESHEET -->
    <link rel="stylesheet" href="styles/styles.css">

    <!-- VENDOR SCRIPTS -->
    <script src="https://code.jquery.com/jquery-2.2.3.js"
    integrity="sha256-laXWtGydpwqJ8JA+X9x2miwmaiKhn8tVmOVEigRNtP4="
    crossorigin="anonymous"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js"></script>

    <!-- CUSTOM SCRIPT -->
    <script src="scripts/app.js"></script>

    <title>Project-01</title>

    <script type="text/javascript">
      window.user = {{{ user }}};
    </script>

  </head>
  <body>
    <div class="container">
      <div class="page-header text-center">
        <h1>Daaaamn Justin</h1>
        <a href="/signup">Signup</a>
        <a href="/login">Login</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
    <section class="container">
      <div id="clothes">
          <div class="panel panel-default">
            <div class="panel-body">
            <!-- START HATS CAROUSEL -->
            <div class="row">
              <div class="col-md-4 col-md-offset-4 text-center">
                <h4>Hats</h4>
              </div>
            </div>
            <div class="seeAll" id="hats-link">
              <a>All Hats</a>
            </div>
            <div class="row hat">
                <div class="col-md-4 col-md-offset-4">
                  <div id="hats-carousel" class="carousel slide" data-ride="carousel" data-interval="false">
                      <!-- Wrapper for slides -->
                    <div class="carousel-inner hat-item-target" role="listbox">
                      <div class="item active">
                        <img src="http://goo.gl/yTtGjh">
                        <div class="carousel-caption">
                          <p>None</p>
                        </div>
                      </div>
                      <!-- Hats Handlebars Template -->
                      <script id="hats-template" type="text/x-handlebars-template">
                        <div class="item">
                          <img src="\{{picture}}">
                          <div class="carousel-caption">
                            <p>\{{description}}</p>
                          </div>
                        </div>
                      </script>
                    </div>

                      <!-- Controls -->
                    <a class="left carousel-control" href="#hats-carousel" role="button" data-slide="prev">
                      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#hats-carousel" role="button" data-slide="next">
                      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                </div>
              </div>

              <!-- START TOPS CAROUSEL -->
              <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                  <h4>Tops</h4>
                </div>
              </div>
              <div class="seeAll" id="tops-link">
                <a>All Tops</a>
              </div>
              <div class="row tops">
                <div class="col-md-6 col-md-offset-3">
                  <div id="tops-carousel" class="carousel slide" data-ride="carousel" data-interval="false">
                    <!-- Wrapper for slides -->
                  <div class="carousel-inner top-item-target" role="listbox">
                    <div class="item active">
                      <img src="http://goo.gl/TFPN0L">
                    </div>
                    <!-- Tops Handlebars Template -->
                    <script id="tops-template" type="text/x-handlebars-template">
                      <div class="item">
                        <img src="\{{picture}}">
                        <div class="carousel-caption">
                          <p>\{{description}}</p>
                        </div>
                      </div>
                    </script>
                  </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#tops-carousel" role="button" data-slide="prev">
                      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                      <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#tops-carousel" role="button" data-slide="next">
                      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                      <span class="sr-only">Next</span>
                    </a>
                  </div>
                </div>
              </div>

              <!-- START BOTTOMS CAROUSEL -->
              <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                  <h4>Bottoms</h4>
                </div>
              </div>
              <div class="seeAll" id="bottoms-link">
                <a>All Bottoms</a>
              </div>
              <div class="row bottoms">

                  <div class="col-md-6 col-md-offset-3">
                    <div id="bottoms-carousel" class="carousel slide" data-ride="carousel" data-interval="false">
                      <!-- Wrapper for slides -->
                      <div class="carousel-inner bottom-item-target" role="listbox">
                        <div class="item active">
                          <img src="http://goo.gl/8SfTrj">
                          <div class="carousel-caption">
                            <p>None</p>
                          </div>
                        </div>
                        <!-- Bottoms Handlebars Template -->
                        <script id="bottoms-template" type="text/x-handlebars-template">
                          <div class="item">
                            <img src="\{{picture}}">
                            <div class="carousel-caption">
                              <p>\{{description}}</p>
                            </div>
                          </div>
                        </script>
                      </div>

                      <!-- Controls -->
                      <a class="left carousel-control" href="#bottoms-carousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="right carousel-control" href="#bottoms-carousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>
                </div>

                <!-- START SHOES CAROUSEL -->
                <div class="row">
                  <div class="col-md-4 col-md-offset-4 text-center">
                    <h4>Shoes</h4>
                  </div>
                </div>
                <div class="seeAll" id="shoes-link">
                  <a>All Shoes</a>
                </div>
                <div class="row shoes">
                  <div class="col-md-4 col-md-offset-4">
                    <div id="shoes-carousel" class="carousel slide" data-ride="carousel" data-interval="false">
                      <!-- Wrapper for slides -->
                      <div class="carousel-inner shoe-item-target" role="listbox">
                        <div class="item active">
                          <img src="http://goo.gl/yTtGjh">
                          <div class="carousel-caption">
                            <p>None</p>
                          </div>
                        </div>
                        <!-- Shoes Handlebars Template -->
                        <script id="shoes-template" type="text/x-handlebars-template">
                          <div class="item">
                            <img src="\{{picture}}">
                            <div class="carousel-caption">
                              <p>\{{description}}</p>
                            </div>
                          </div>
                        </script>
                      </div>

                      <!-- Controls -->
                      <a class="left carousel-control" href="#shoes-carousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="right carousel-control" href="#shoes-carousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>
                </div>
              <div class='panel-footer'>
                <button class="btn btn-success btn-lg" id="wear">Looks Good!</button>
                <button class="btn btn-success btn-lg" id="createClothes">Add Clothes</button>
              </div>

            </div>
          </div>
    </section>

    <!-- begin clothesModal-->
    <div class="modal fade" tabindex="-1" role="dialog" id="clothesModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Add Clothes</h4>
          </div>
          <div class="modal-body">

            <fieldset class='form-horizontal'>
              <!-- Type input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="type">Type:</label>
                <div class="col-md-6">
                  <input class="newClothesInput" id="type" name="type" type="text" placeholder="Hat, Top, Bottom, or Shoes" class="form-control input-md"/>
                </div>
              </div>
              <!-- Description input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="description">Description:</label>
                <div class="col-md-6">
                  <input class="newClothesInput" id="description" name="description" type="text" placeholder="(optional)" class="form-control input-md"/>
                </div>
              </div>
              <!-- Picture input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="picture">Picture:</label>
                <div class="col-md-6">
                  <input class="newClothesInput" id="picture" name="picture" type="text" placeholder="http://..." class="form-control input-md"/>
                </div>
              </div>
              <!-- Max input-->
              <div class="form-group">
                <label class="col-md-4 control-label" for="max">Max:</label>
                <div class="col-md-6">
                  <input class="newClothesInput" id="max" name="max" type="text" placeholder="# of times worn until dirty" class="form-control input-md"/>
                </div>
              </div>
            </fieldset>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="saveClothes">Add</button>
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

  </body>
</html>
